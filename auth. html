  <meta charset="UTF-8">
  <title>Login / Sign Up - High Stars Aimers</title>
  <!-- Firebase SDKs -->
  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-app-compat.js"></script>
  <script src="https://www.gstatic.com/firebasejs/9.22.0/firebase-auth-compat.js"></script>
  <style>
    body { font-family: Arial, sans-serif; }
    .container { max-width: 400px; margin: 50px auto; padding: 20px; border: 1px solid #ccc; }
    form { margin-bottom: 30px; }
    input { display: block; width: 95%; padding: 10px; margin-bottom: 10px; }
    button { padding: 10px 20px; }
    .error { color: red; margin-bottom: 10px; }
  </style>
</head>
<body>
  <div class="container">
    <h2>Sign Up</h2>
    <form id="signup-form">
      <input type="email" id="signup-email" placeholder="Email" required>
      <input type="password" id="signup-password" placeholder="Password (min 6 chars)" required>
      <button type="submit">Sign Up</button>
      <div class="error" id="signup-error"></div>
    </form>

    <h2>Sign In</h2>
    <form id="signin-form">
      <input type="email" id="signin-email" placeholder="Email" required>
      <input type="password" id="signin-password" placeholder="Password" required>
      <button type="submit">Sign In</button>
      <div class="error" id="signin-error"></div>
    </form>
  </div>

  <script>
    // Your Firebase config
    const firebaseConfig = {
      apiKey: "AIzaSyC1aadbta20jiWeB6zdg-3s8pMSsUnuM8c",
      authDomain: "high-stars-aimers.firebaseapp.com",
      projectId: "high-stars-aimers",
      storageBucket: "high-stars-aimers.firebasestorage.app",
      messagingSenderId: "392032940366",
      appId: "1:392032940366:web:de409902ce3229d427ae1f",
      measurementId: "G-WT9ZSCZWCB"
    };
    firebase.initializeApp(firebaseConfig);
    const auth = firebase.auth();

    // Sign Up
    document.getElementById('signup-form').onsubmit = function(e) {
      e.preventDefault();
      const email = document.getElementById('signup-email').value;
      const password = document.getElementById('signup-password').value;
      document.getElementById('signup-error').textContent = "";
      auth.createUserWithEmailAndPassword(email, password)
        .then(() => window.location.href = "dashboard.html")
        .catch(error => {
          document.getElementById('signup-error').textContent = error.message;
        });
    };

    // Sign In
    document.getElementById('signin-form').onsubmit = function(e) {
      e.preventDefault();
      const email = document.getElementById('signin-email').value;
      const password = document.getElementById('signin-password').value;
      document.getElementById('signin-error').textContent = "";
      auth.signInWithEmailAndPassword(email, password)
        .then(() => window.location.href = "dashboard.html")
        .catch(error => {
          document.getElementById('signin-error').textContent = error.message;
        });
    };
  </script>
</body>
</html>